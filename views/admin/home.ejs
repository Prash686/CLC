<% layout('/layouts/boilerplate') -%>
<style>
    .hero {
      background: url('/image/hero.jpg') no-repeat center center;
      background-size: cover;
      margin-top: 5px;
      color: #fff;
      text-align: center;
      padding: 120px 0;
      transition: background-size 0.5s ease;
      position: relative;
      overflow: hidden;
    }
  
    .hero::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5); /* Dark overlay for better text visibility */
    }
  
    .hero .container {
      position: relative;
      z-index: 1;
    }
  
    .hero h1 {
      font-size: 4rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
      transition: opacity 0.5s ease;
    }
  
    .hero p {
      font-size: 1.5rem;
      margin-bottom: 2rem;
      transition: opacity 0.5s ease;
    }
  
    .hero a.btn {
      background-color: #fe424d; /* Updated color */
      color: #fff;
      padding: 1rem 2rem;
      border-radius: 0.5rem;
      font-size: 1.25rem;
      text-decoration: none;
      transition: background-color 0.3s ease, transform 0.3s ease;
    }
  
    .hero a.btn:hover {
      background-color: #d52c3c; /* Darker shade */
      transform: scale(1.05);
    }
  
    /* Features Section */
    #features {
      padding: 3rem 0;
      background-color: #f8f9fa; /* Light grey background */
    }
  
    .feature-card {
      background-color: #fff;
      border-radius: 0.5rem;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 1.5rem;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      text-align: center;
    }
  
    .feature-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }
  
    .feature-icon {
      font-size: 3rem;
      color: #fe424d; /* Updated color */
      margin-bottom: 1rem;
      transition: color 0.3s ease;
    }
  
    .feature-icon:hover {
      color: #d52c3c; /* Darker shade */
    }
  
    /* Cards for Student and Admin Interfaces */
    .card-container {
      display: flex;
      justify-content: center;
      gap: 2rem;
      margin-top: 2rem;
    }
  
    .card {
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 0.5rem;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      text-align: center;
      width: 300px;
      padding: 1.5rem;
      overflow: hidden;
    }
  
    .card img {
      width: 100%;
      height: auto;
      border-radius: 0.5rem;
      margin-bottom: 1rem;
    }
  
    .card:hover {
      transform: translateY(-10px);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }
  
    .card h3 {
      margin-bottom: 1rem;
      color: #423c49; /* Dark grey for card headings */
    }
  
    .card p {
      margin-bottom: 1.5rem;
      color: #4e415e; /* Medium grey for card text */
    }
  
    .card a {
      background-color: #fe424d; /* Updated color */
      color: #fff;
      padding: 0.75rem 1.5rem;
      border-radius: 0.5rem;
      font-size: 1rem;
      text-decoration: none;
      transition: background-color 0.3s ease, transform 0.3s ease;
      display: inline-block;
    }
  
    .card a:hover {
      background-color: #d52c3c; /* Darker shade */
      transform: scale(1.05);
    }
  
    /* Responsive Design */
    @media (max-width: 768px) {
      .hero {
        padding: 80px 0;
      }
  
      .hero h1 {
        font-size: 2.5rem;
      }
  
      .hero p {
        font-size: 1.25rem;
      }
  
      .feature-card {
        padding: 1rem;
      }
  
      .card-container {
        flex-direction: column;
        align-items: center;
      }
    }
  
    @media (max-width: 576px) {
      .hero h1 {
        font-size: 1.75rem;
      }
  
      .hero p {
        font-size: 1rem;
      }
    }    
    .application-card {
        background: linear-gradient(135deg, #ffffff, #f0f0f0); /* Gradient background */
        border-radius: 1rem; /* More rounded corners */
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Increased shadow */
        padding: 2rem; /* Increased padding */
        margin: 1rem 0;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: relative;
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* Transition for hover effect */
      }
      
      .application-card:hover {
        transform: translateY(-5px); /* Slight lift effect on hover */
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3); /* Enhanced shadow on hover */
      }
      
      .card-body {
        display: flex; /* Use flexbox for layout */
        justify-content: space-between; /* Space items evenly */
        align-items: center; /* Center items vertically */
    }
    

    .info-column {
        flex: 1; /* Take up available space */
        margin-right: 1rem; /* Space between text and icon */
    }
    
    .icon-column {
        display: flex; /* Center the icon vertically */
        align-items: center; /* Center the icon vertically */
    }

    p {
        margin-right: 3rem;
    }
    
    .info-row {
        display: flex; /* Use flexbox for layout */
        /*justify-content: space-between;  Space items evenly */
        margin: 0.5rem 0; /* Margin for spacing */
    }
    
    .view-button {
        color: #fe424d; /* Updated color */
        font-size: 1.5rem;
        text-decoration: none;
        transition: color 0.3s ease, transform 0.3s ease;
        padding: 0.5rem; /* Padding for better click area */
        border-radius: 0.5rem; /* Rounded corners */
        border: 2px solid transparent; /* Transparent border for hover effect */
    }
    
    .view-button:hover {
        color: #d52c3c; /* Darker shade */
        border: 2px solid #d52c3c; /* Border on hover */
        transform: scale(1.1); /* Scale effect on hover */
    }
  </style>

<!-- Hero Section -->
<section id="home" class="hero">
  <div class="container">
    <h1>Welcome to CLC Portal</h1>
    <p>Apply for your College Leaving Certificate with ease. Admins can manage applications effectively.</p>
    <a href="#view-applications" class="btn btn-primary btn-lg">View Applications</a>
  </div>
</section>
<br>

<!-- Application Card -->
<section id="view-applications" class="container my-5">
  <h2 class="text-center mb-4">Applications</h2>

  <% if (applications.length === 0) { %>
      <div class="alert alert-info text-center" style="background-color: #fe424d ; color : white;" role="alert">
          No applications have been submitted yet.
      </div>
  <% } else { %>
      <% applications.forEach(application => { %>
          <div class="application-card">
              <div class="card-body">
                  <div class="info-column">
                      <p><strong>Name:</strong> <%= application.studentId.name %></p>
                      <p><strong>Branch:</strong> <%= application.course %></p> <!-- Dynamic course -->
                  </div>
                  <div class="info-column">
                      <p><strong>Reason for CLC:</strong> <%= application.reason %></p> <!-- Dynamic reason -->
                      <p><strong>Date of Application:</strong> <%= new Date(application.dateApplied).toLocaleDateString('en-IN', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                  </div>
                  <div class="icon-column">
                      <a href="/view-application/<%= application._id %>" class="view-button" title="View Full Application">
                          <i class="fas fa-eye"></i> 
                      </a>
                  </div>
              </div>
          </div>
      <% }); %>
  <% } %>
</section>
